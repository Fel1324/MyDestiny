<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - MyDestiny</title>
        <link rel="stylesheet" href="~/css/global.css" asp-append-version="true">
        <link rel="stylesheet" href="~/MyDestiny.styles.css" asp-append-version="true">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyDestiny</a>
                <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            </nav>
        </header>

        <main role="main">
            @RenderBody()
        </main>

        <footer class="footer">
                <p>
                    &copy; 2023 - MyDestiny - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </p>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
