<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - MyDestiny</title>
        <link rel="stylesheet" href="~/css/global.css" asp-append-version="true">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
        <link rel="icon" href="~/favicon.png" sizes="32x32" type="image/png">
    </head>
    
    <body>
        <header class="header">
            <div class="header__container">
                <button class="header__btn-search">
                    <img src="~/img/search.svg">
                </button>

                <a class="" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo" src="~/img/logo.png" alt="Logo MyDestiny">
                </a>

                <button class="header__menu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/img/menu-open.svg">
                </button>

                <input class="header__input-search" type="search" name="search" placeholder="Pesquise aqui">

                <nav class="header__navbar">
                    <ul class="navbar__list">
                        <li class="navbar__item">
                            <a class="navbar__link" asp-action="Index" data-path="/">Home</a>
                        </li>

                        <li class="navbar__item">
                            <a class="navbar__link" asp-action="Attractions" data-path="/Home/Attractions">Atrações</a>
                        </li>

                        <li class="navbar__item">
                            <a class="navbar__link" asp-action="About" data-path="/Home/About">Sobre nós</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>

        <main role="main">
            @RenderBody()
        </main>

        <footer class="footer">
            <div class="footer__container">
                <div class="footer__social">
                    <img class="logo" src="~/img/logo.png" alt="Logo MyDestiny">

                    <ul class="social__list">
                        <li class="social__item">
                            <a class="social__link" href="#!">
                                <img class="social__img" src="~/img/insta.svg" alt="instagram">
                            </a>
                        </li>

                        <li class="social__item">   
                            <a class="social__link" href="#!">
                                <img class="social__img" src="~/img/zap.svg" alt="whatsapp">
                            </a>
                        </li>

                        <li class="social__item">
                            <a class="social__link" href="#!">
                                <img class="social__img" src="~/img/face.svg" alt="facebook">
                            </a>
                        </li>
                    </ul>
                </div>

                <p class="footer__copy">
                    &copy; copyright 2023 - MyDestiny - Todos os direitos reservados
                </p>
            </div>
        </footer>

        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
