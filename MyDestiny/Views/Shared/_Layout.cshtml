<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - MyDestiny</title>
        <link rel="stylesheet" href="~/css/global.css" asp-append-version="true">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    </head>
    
    <body>
        <header class="header">
            <div class="header__container">
                <a class="" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="Logo MyDestiny">
                </a>

                <nav class="">
                    <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        
                    </button>
                </nav>
            </div>
        </header>

        <main role="main">
            @RenderBody()
        </main>

        <footer class="footer">
                <p>
                    &copy; 2023 - MyDestiny - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </p>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
